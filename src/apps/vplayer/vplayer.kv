#:kivy 1.3.0


<VPlayer>:

    spacing: 5
    padding: 5
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1.0, 0.1)

        Label:
            text: 'Unselectable item'
            size_hint_y: None
            height: 44
    
        Button:
            text: 'My first Item'
            size_hint_y: None
            height: 44
            on_release: root.select('item1')

        Button:
            text: 'My second Item'
            size_hint_y: None
            height: 44
            on_release: root.select('item2')	


    VideoPlayer:
        size_hint: (1.0, 0.9)
        source: '/almacen/Courses/Coursera/Gamification/lectures/1 - 3 - 1.3 Definition of Gamification (1232).mp4'
        state: 'pause'
            
